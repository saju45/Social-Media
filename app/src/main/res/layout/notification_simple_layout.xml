<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notification_layout"
    android:background="#E6E4E4"
    >


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/notification_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:padding="10sp"
        android:src="@drawable/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/circler_bg"
        app:layout_constraintBottom_toBottomOf="@id/notification_profile"
        app:layout_constraintEnd_toEndOf="@id/notification_profile"
        app:layout_constraintStart_toStartOf="@id/notification_profile"
        app:layout_constraintTop_toTopOf="@id/notification_profile" />


    <TextView
        android:id="@+id/notification_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Shanawaj Hossain Mention you in a comment Shanawaj Hossain Mention you in a comment"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/notification_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/notification_profile"
        app:layout_constraintTop_toTopOf="@id/notification_profile"
        app:layout_constraintVertical_bias="0.19" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="just now"
        app:layout_constraintStart_toStartOf="@id/notification_name"
        app:layout_constraintTop_toBottomOf="@id/notification_name" />

</androidx.constraintlayout.widget.ConstraintLayout>