<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/simple_rvprofile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:padding="4dp"
        android:src="@drawable/programmer"
        diagonal:civ_border_color="@color/white"
        diagonal:civ_border_width="5dp"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintTop_toTopOf="parent"
        diagonal:layout_constraintVertical_bias="0.96" />


    <TextView
        android:id="@+id/simple_rvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Shanawaj "
        android:textSize="16sp"
        android:textColor="@color/black"
        diagonal:layout_constraintBottom_toBottomOf="@id/simple_rvprofile"
        diagonal:layout_constraintStart_toEndOf="@id/simple_rvprofile"
        diagonal:layout_constraintTop_toTopOf="@id/simple_rvprofile"
        diagonal:layout_constraintVertical_bias="0.32999998" />

  <TextView
        android:id="@+id/simple_rvmessage"
        android:text="message"
        android:layout_marginStart="8dp"
        diagonal:layout_constraintStart_toStartOf="@id/simple_rvname"
        diagonal:layout_constraintTop_toBottomOf="@id/simple_rvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/followBtn"
        android:background="@drawable/follow_btn"
        android:text="follow"
        android:textColor="@color/white"
        android:layout_marginRight="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        diagonal:layout_constraintEnd_toEndOf="parent"
        diagonal:layout_constraintTop_toTopOf="@id/simple_rvprofile"
        diagonal:layout_constraintBottom_toBottomOf="@id/simple_rvprofile"
        android:layout_width="wrap_content"
        android:layout_height="35dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>